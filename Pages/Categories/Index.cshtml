@page
@model FinanceTrackerWeb.Pages.Categories.IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Категории";
}

<h1>@ViewData["Title"]</h1>

<a asp-page="Create" class="btn btn-success mb-3">➕ Добавить категорию</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Название</th>
            <th>Тип</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    @if (category.Type == "Income")
                    {
                        <span>Доход</span>
                    }
                    else
                    {
                        <span>Расход</span>
                    }
                </td>
                <td>
                    <a asp-page="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Редактировать</a>
                    <a asp-page="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>