    @page "{id}"
    @model FinanceTrackerWeb.Pages.Transactions.DeleteModel
    @{
        Layout = "_Layout";
        ViewData["Title"] = "Удаление транзакции";
    }

    <h2>@ViewData["Title"]</h2>

    <h3>Вы уверены, что хотите удалить эту транзакцию?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Дата</dt>
            <dd class="col-sm-10">@Model.Transaction.Date.ToShortDateString()</dd>

            <dt class="col-sm-2">Сумма</dt>
            <dd class="col-sm-10">@Model.Transaction.Amount.ToString("C")</dd>

            <dt class="col-sm-2">Категория</dt>
            <dd class="col-sm-10">@Model.Transaction.Category?.Name</dd>

            <dt class="col-sm-2">Описание</dt>
            <dd class="col-sm-10">@Model.Transaction.Description</dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Transaction.Id" />
            <button type="submit" class="btn btn-danger">Удалить</button>
            <a asp-page="Index" class="btn btn-secondary">Отмена</a>
        </form>
    </div>